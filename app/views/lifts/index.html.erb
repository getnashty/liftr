 	<%=h @exname.name %>	
 	</div>
 	<div class="max-item2">
 	<%=h lift.weight %> lbs	
 	</div>
 	<div class="max-item2">
 	<%=h lift.created_at.strftime("%m/%d/%Y") %>	
 	</div>
 	<div class="max-item2" style="width:30px;">
 	<a href="/lifts/<%=h lift.id %>/edit"><div class="pencil"></div></a>
 	</div>
 	<div class="max-item2" style="width:30px;">
