
<% form_for(@lift) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :exercise_id %><br />

    <%= f.select (:exercise_id, @exercises.collect {|exercise| [ exercise.name, exercise.id ] }) %>
  </p>
  <p>
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </p>
  <p>
    <input id="lift_user_id" name="lift[user_id]" size="30" type="hidden" value="<%=h current_user.id %>" /<br />
    <%= f.submit 'Create' %>
  </p>
<% end %>


<h1>Listing lifts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Exercise</th>
    <th>Weight</th>
    <th>Date</th>
  </tr>

<% @lifts.each do |lift| %>
<% if lift.user_id == current_user.id %>
<% @exname=Exercise.find(lift.exercise_id)%>

  <tr>
    <td><%=h lift.user_id %></td>
    <td><%=h @exname.name %></td>
    <td><%=h lift.weight %> lbs</td>
    <td><%=h lift.created_at.strftime("%m/%d/%Y") %></td>
    <td><%= link_to 'Show', lift %></td>
    <td><%= link_to 'Edit', edit_lift_path(lift) %></td>
    <td><%= link_to 'Destroy', lift, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<% end %>
</table>