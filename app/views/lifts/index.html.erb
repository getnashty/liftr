<div class="headly">
<h1>Enter Today's Weights</h1>
</div>


 <!-- example 1 -->  
	<ul id="enter-weights" class="subsection_tabs">
		<% @muscles.each do |muscle| %>
			<% if muscle.name != "Body" %>
			<li class="tab"><a href="#<%=h muscle.name %>"><%=h muscle.name %></a></li>
			<% end %>
		<% end %>
	</ul>
	
	<% @muscles.each do |muscle| %>
		<% if muscle.name != "Body" %>
		<% @muscleid = muscle.id %>

	<div id="<%=h muscle.name %>">
	
			<div id="enter-stuff">
				
				<% optcount %>
		
				<% if @xcount == @lcount %> 

					Sorry, you have already entered your <strong><%=h muscle.name %></strong> exercises for today, feel free to edit them below!

				<% else %>
				<% form_for(@lift) do |f| %>
				  <%= f.error_messages %>

					<div style="float:left;">

				  	<div class="text_field">
				    <%= f.label :exercise_id %><br />
					<%= exercise_select(f) %>

					</div>
				    <div class="text_field">
					<%= f.label :weight %><br />
				    <%= f.text_field (:weight, :size=>3) %>
					</div>
					<div class="text_field">
					Date<br />
					<div style="font-weight:normal;margin-top:10px;">
					<%=h Time.now.strftime("%m/%d/%Y") %>
					</div>
					</div>
				    <div class="submit_field2" style="margin-top:-5px">
				    <%= f.submit 'Add Max' %>
					</div>

					<input id="lift_user_id" name="lift[user_id]" size="30" type="hidden" value="<%=h current_user.id %>" >

					</div>

					<% end %>	


				<% end %>

						<div style="clear:both;"></div>

			</div>

			<div class="oneaday">
				* Please note, each exercise may only have 1 entry per day!
			</div>
	
	</div>
		<% end %>
	<% end %>
	
	
	
